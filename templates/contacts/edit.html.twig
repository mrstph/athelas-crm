{% extends 'base.html.twig' %}

{% block title %} {{ contact.firstname }} {{ contact.lastname }} | Athelas {% endblock %}

{% block body %}
    <div class="page-heading">
        <div class="page-title">
            <div class="row">
                <div class="col-12 col-md-6 order-md-1 order-last">
                    <h3>{{ contact.firstname }} {{ contact.lastname }}</h3>
                    <p class="text-subtitle text-muted">Changez les informations et appuyez sur "Valider" pour appliquer les changements.</p>
                </div>
                <div class="col-12 col-md-6 order-md-2 order-first">
                    <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ path('contacts_index') }}">Contacts</a></li>
                            <li class="breadcrumb-item"><a href="{{ path('contacts_show', {id: contact.id}) }}">{{ contact.firstname }} {{ contact.lastname }}</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Modifier</a></li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
        {{ include('contacts/_form.html.twig', { button_label : 'Valider' }) }}
{% endblock %}
