{{ form_start(form, { 'attr':{'id':'contact'}}) }}
    {{ form_row(form.firstname) }}
    {{ form_row(form.lastname) }}
    {{ form_row(form.email) }}
    {{ form_row(form.phone) }}
    {{ form_row(form.address) }}
    {{ form_row(form.zip_code) }}
    {{ form_row(form.city) }}
    {{ form_row(form.country) }}
    {{ form_row(form.job_position) }}
    {{ form_row(form.company) }}
{{ form_end(form) }}

    <div class="col-12 d-flex justify-content-start mt-4">
        <button form="contact" type="submit" class="btn btn-primary me-1 mb-1">{{ button_label|default('Ajouter') }}</button>

        {# the cancel button redirects to index when on the create form page
        the cancel button redirects to the previous user when on the create form page #}

        {% if app.request.attributes.get('_route') == 'contacts_new' %}
            <a href="{{ path('contacts_index') }}"><button class="btn btn-secondary me-1 mb-1">Annuler</button></a>
        {% else %}
            <a href="{{ path('contacts_show', {id: contact.id}) }}"><button class="btn btn-secondary me-1 mb-1">Annuler</button></a>
        {% endif %}

        {# only show the delete button when editing a contact #}
            
        {% if app.request.attributes.get('_route') == 'contacts_edit' %}
            {{ include('contacts/_delete_form.html.twig') }}
        {% endif %}
    </div>