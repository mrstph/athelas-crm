{% extends 'base.html.twig' %}

{% block title %} {{ contact.firstname}} {{ contact.lastname}} | Athelas {% endblock %}

{% block body %}
    <div class="page-heading">
        <div class="page-title">
            <div class="row">
                <div class="col-12 col-md-6 order-md-1 order-last">
                    <h3>{{ contact.firstname}} {{ contact.lastname}}</h3>
                    {# <p class="text-subtitle text-muted">Remplissez les champs pour ajouter une enterprise au carnet d'entreprises.</p> #}
                </div>
                <div class="col-12 col-md-6 order-md-2 order-first">
                    <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ path('contacts_index')}}">Contacts</a></li>
                            <li class="breadcrumb-item active" aria-current="page">{{ contact.firstname}} {{ contact.lastname}} </a></li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
<table class="table">
        <tbody>
            <tr>
                <th>Prénom</th>
                <td>{{ contact.firstname }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ contact.lastname }}</td>
            </tr>
            <tr>
                <th>E-mail</th>
                <td>{{ contact.email }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ contact.phone }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ contact.address }}</td>
            </tr>
            <tr>
                <th>Code postal</th>
                <td>{{ contact.zipCode }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ contact.city }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ contact.country }}</td>
            </tr>
            <tr>
                <th>Type de contact</th>
                <td>{{ contact.jobPosition }}</td>
            </tr>
            <tr>
                <th>Entreprise</th>
                <td>{{ contact.company.name|default('') }}</td>
            </tr>
        </tbody>
    </table>

    <div class="col-12 d-flex justify-content-start my-4">
        <a href="{{ path('contacts_edit', {'id': contact.id}) }}"><button class="btn btn-primary me-1">Modifier</button></a>
        {{ include('contacts/_delete_form.html.twig') }}
    </div>
{% endblock %}