{% extends 'base.html.twig' %}

{% block title %}Contacts | Athelas {% endblock %}

{% block body %}
<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Liste des contacts</h3>
                <p class="text-subtitle text-muted">Tous les contacts enregistrés.</p>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('contacts_index')}}">Contacts</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Liste</a></li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <section class="section">
        <div class="card">
            <div class="card-header">
            </div>
            <div class="card-body">
                <table class="table table-striped" id="table1">
                    <thead>
                        <tr>
                            <th>Prénom</th>
                            <th>Nom</th>
                            <th>Type de contact</th>
                            <th>Entreprise</th>
                            <th>E-mail</th>
                            <th>Téléphone</th>
                            {# <th>Adresse</th> #}
                            <th>Code postal</th>
                            <th>Ville</th>
                            <th>Pays</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for contact in contacts %}
                            <tr>
                                <td>{{ contact.firstname }}</td>
                                <td>{{ contact.lastname }}</td>
                                <td>{{ contact.jobposition }}</td>
                                <td>{{ contact.company.name|default('') }}</td>
                                <td>{{ contact.email }}</td>
                                <td>{{ contact.phone }}</td>
                                {# <td>{{ contact.address }}</td> #}
                                <td>{{ contact.zipcode }}</td>
                                <td>{{ contact.city }}</td>
                                <td>{{ contact.country }}</td>
                                <td>
                                    <a href="{{ path('contacts_show', {'id': contact.id}) }}"><button class="btn btn-secondary me-1">Voir</button></a>
                                    <a href="{{ path('contacts_edit', {'id': contact.id}) }}"><button class="btn btn-primary me-1">Modifier</button></a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="8">Aucun contact trouvé</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <div class="col-12 d-flex justify-content-start">
                    <a href="{{ path('contacts_new') }}"><button class="btn btn-primary me-1">Ajouter un contact</button></a>
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}

{% block styles %}
<link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" type="text/css">
{% endblock %}

{% block js %}
<script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" type="text/javascript"></script>
{% endblock %}


