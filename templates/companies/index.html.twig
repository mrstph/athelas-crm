{% extends 'base.html.twig' %}

{% block title %}Entreprises | Athelas {% endblock %}

{% block body %}
<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Liste des entreprises</h3>
                <p class="text-subtitle text-muted">Toutes les entreprises enregistrées.</p>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('companies_index')}}">Entreprises</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Liste</a></li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <section class="section">
        <div class="card">
            <div class="card-header">
            </div>
            <div class="card-body">
                <table class="table table-striped" id="table1">
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>E-mail</th>
                            <th>Téléphone</th>
                            <th>Adresse</th>
                            <th>Code postal</th>
                            <th>Ville</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for company in companies %}
                            <tr>
                                <td>{{ company.name }}</td>
                                <td>{{ company.email }}</td>
                                <td>{{ company.phone }}</td>
                                <td>{{ company.address }}</td>
                                <td>{{ company.zipcode }}</td>
                                <td>{{ company.city }}</td>
                                <td>
                                    <a href="{{ path('companies_show', {'id': company.id}) }}"><button class="btn btn-secondary me-1">Voir</button></a>
                                    <a href="{{ path('companies_edit', {'id': company.id}) }}"><button class="btn btn-primary me-1">Modifier</button></a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="8">Aucune entreprise trouvée</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <div class="col-12 d-flex justify-content-start">
                    <a href="{{ path('companies_new') }}"><button class="btn btn-primary me-1">Ajouter une entreprise</button></a>
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}

{% block styles %}
<link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" type="text/css">
{% endblock %}

{% block js %}
<script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" type="text/javascript"></script>
{% endblock %}

