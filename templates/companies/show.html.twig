{% extends 'base.html.twig' %}

{% block title %} {{ company.name}} | Athelas {% endblock %}

{% block body %}
    <div class="page-heading">
        <div class="page-title">
            <div class="row">
                <div class="col-12 col-md-6 order-md-1 order-last">
                    <h3>{{company.name}}</h3>
                    {# <p class="text-subtitle text-muted">Remplissez les champs pour ajouter une enterprise au carnet d'entreprises.</p> #}
                </div>
                <div class="col-12 col-md-6 order-md-2 order-first">
                    <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ path('companies_index')}}">Entreprises</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Entreprise {{company.name}}</a></li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ company.name }}</td>
            </tr>
            <tr>
                <th>E-mail</th>
                <td>{{ company.email }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ company.phone }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ company.address }}</td>
            </tr>
            <tr>
                <th>Code postal</th>
                <td>{{ company.zipcode }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ company.city }}</td>
            </tr>
        </tbody>
    </table>

    <div class="col-12 d-flex justify-content-start my-4">
        <a href="{{ path('companies_edit', {'id': company.id}) }}"><button class="btn btn-primary me-1">Modifier</button></a>
        {{ include('companies/_delete_form.html.twig') }}
    </div>
{% endblock %}